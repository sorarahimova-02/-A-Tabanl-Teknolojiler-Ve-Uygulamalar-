@{
    ViewData["Title"] = "Financial Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">Financial Reports</h2>
            <p class="text-muted">Detailed financial analysis and insights</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Monthly Income</h6>
                    <h3 class="card-title text-success">$@ViewBag.MonthlyIncome.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Monthly Expenses</h6>
                    <h3 class="card-title text-danger">$@ViewBag.MonthlyExpenses.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Yearly Income</h6>
                    <h3 class="card-title text-success">$@ViewBag.YearlyIncome.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Yearly Expenses</h6>
                    <h3 class="card-title text-danger">$@ViewBag.YearlyExpenses.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Monthly Trend Chart -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">Monthly Spending Trend (Last 6 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyTrendChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Categories -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">Top Spending Categories</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopCategories != null)
                    {
                        var topCats = ViewBag.TopCategories as List<dynamic>;
                        @if (topCats != null && topCats.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var category in topCats)
                                {
                                    <div class="list-group-item border-0 px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">@category.Category</h6>
                                                <small class="text-muted">@category.Count transaction(s)</small>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-danger fs-6">$@category.Amount.ToString("N2")</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center py-3">No spending data available</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No spending data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const monthlyTrend = @Html.Raw(Json.Serialize(ViewBag.MonthlyTrend));
        
        if (monthlyTrend && monthlyTrend.length > 0) {
            const ctx = document.getElementById('monthlyTrendChart').getContext('2d');
            const trendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: monthlyTrend.map(item => item.month),
                    datasets: [{
                        label: 'Monthly Expenses',
                        data: monthlyTrend.map(item => item.expenses),
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return '$' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toFixed(0);
                                }
                            }
                        }
                    }
                }
            });
        } else {
            document.getElementById('monthlyTrendChart').parentElement.innerHTML = 
                '<div class="text-center py-5 text-muted"><p>No data available</p><p class="small">Add some transactions to see the chart</p></div>';
        }
    </script>
}
